<!DOCTYPE html>
<html lang="ja">
<head>
  {# ▼▼▼ HEAD（共通） ▼▼▼ #}
  {% include '../components/head/_index.njk' %}
  {# ▲▲▲ HEAD（共通） ▲▲▲ #}

  {# ▼▼▼ HEAD（ページ専用） ▼▼▼ #}
  {% block PAGE_HEAD %}
  {% endblock %}
  {# ▲▲▲ HEAD（ページ専用） ▲▲▲ #}
</head>
<body class="layout__body" data-barba="wrapper">
  {# ▼▼▼ ページローダー ▼▼▼ #}
  {# {% include '../components/page-loader.njk' %} #}
  {# ▲▲▲ ページローダー ▲▲▲ #}

  {# ▼▼▼ ヘッダー ▼▼▼ #}
  {% include '../components/header/_index.njk' %}
  {# ▲▲▲ ヘッダー ▲▲▲ #}

  <!-- ▼▼▼ ページ内容 ▼▼▼ -->
  <div id="js-layout-content" class="layout__content" data-barba="container">
    {% block HERO_CONTENT %}
    {% endblock %}
    <div class="layout__container --has-aside container pt-5 pb-5">
      <main class="layout__main">
        {% block PAGE_CONTENT %}
        {% endblock %}
      </main>
      <aside class="layout__aside">
        <div class="layout__aside-content">
          {% block ASIDE_CONTENT %}
          {% endblock %}
        </div>
      </aside>
    </div>
    {# ▼▼▼ トップへ戻る ▼▼▼ #}
    {% include '../components/go-top.njk' %}
    {# ▲▲▲ トップへ戻る ▲▲▲ #}
  </div>
  <!-- ▲▲▲ ページ内容 ▲▲▲ -->

  {# ▼▼▼ フッター ▼▼▼ #}
  {% include '../components/footer.njk' %}
  {# ▲▲▲ フッター ▲▲▲ #}

  {# ▼▼▼ 固定要素 ▼▼▼ #}
  {% block FIX_CONTENT %}
  {% endblock %}
  {# ▲▲▲ 固定要素 ▲▲▲ #}

  {# ▼▼▼ FOOT（共通） ▼▼▼ #}
  {% include '../components/foot/_index.njk' %}
  {# ▲▲▲ FOOT（共通） ▲▲▲ #}

  {# ▼▼▼ FOOT（ページ専用） ▼▼▼ #}
  {% block PAGE_FOOT %}
  {% endblock %}
  {# ▲▲▲ FOOT（ページ専用） ▲▲▲ #}
</body>
</html>
