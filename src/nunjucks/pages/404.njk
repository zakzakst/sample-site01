  TITLE: 'ページタイトル',
  DESCRIPTION: 'ページ概要',
  PATH: '',
  NAV: 'contact',
  ROOT: './',
  SCHEMA_ITEMS: [
    {
      ID: CONSTANTS.DOMAIN,
      NAME: CONSTANTS.SITE_NAME
    },
    {
      ID: CONSTANTS.DOMAIN + '404.html',
      NAME: '404 Not Found'
    }
