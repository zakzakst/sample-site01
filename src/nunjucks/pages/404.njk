    {
      LINK: '/404.html',
      LABEL: '404 Not Found'
    }
  ]
} %}

{# ▼▼▼ コンポーネント読み込み ▼▼▼ #}
{% from 'components/breadcrumb.njk' import default as BREADCRUMB %}
